<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.guest.beerhere.ui.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/backgroundImage"
        android:src="@drawable/main_background"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/aboutButton"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/aboutbutton"
        android:textColor="@color/colorPrimary"
        android:elevation="40dp"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="About" />

    <Button
        android:id="@+id/bioButton"
        android:textColor="@color/colorPrimary"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:background="@drawable/biobutton"
        android:elevation="40dp"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Bio"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/findBeerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find Nearby Beer"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/aboutButton"
        android:layout_alignStart="@+id/aboutButton" />
    <Button
        android:id="@+id/savedBreweriesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saved Breweries"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/bioButton"
        android:layout_alignEnd="@+id/bioButton" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beer Here!"
        android:textSize="80sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/aboutButton"
        android:textColor="@color/colorPrimaryDark"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/editTextLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:hint="Enter Zip Code"
        android:textColorHint="@color/colorPrimary"
        android:textAlignment="center"
        android:background="@android:color/transparent"
        android:ems="10"
        android:inputType="number"
        android:layout_marginTop="79dp"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aboutButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="TextView" />


</RelativeLayout>
